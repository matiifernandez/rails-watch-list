<div class="container my-3">
  <div class="card-category banner-height" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path 'banner.jpg', alt: 'banner image' %>)">
  Movies watchlist. Save any kind of movie!
  <%= link_to 'Create a new list', "#", data:{bs_toggle: "modal", bs_target: "#exampleModal"}, class: "mx-4 btn btn-light" %>
  </div>
    <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('https://ducunl0s4svtl.cloudfront.net/wp-content/uploads/2017/10/flat-clapperboard-icon_1063-38.jpg') %>)">

      <%= link_to list_path(list),
          data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure you want to delete the list '#{list.name}'?"
          },
          class: "delete-icon" do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>

      <span class="list-name-wrapper">
        <%= link_to list.name, list_path(list), class: "list-name-link" %>
      </span>

    </div>
  <% end %>
</div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Create your own list</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @list do |f| %>
            <%= f.input :name, placeholder: 'e.g. My favorite movies' %>
            <%= f.input :photo, as: :file %>
            <%= f.submit 'Create list', class: 'btn btn-secondary w-100 mb-2' %>
            <%= link_to "Cancel", lists_path, class: 'btn btn-light w-100' %>
          <% end %>
      </div>
    </div>
  </div>
</div>
